body {
    background: url(<%= asset_path "bg4.jpg" %>) no-repeat;
    background-size: cover;
}

.btn-warning {
    color: white;
    background-color: #0035B2;
    border-color: blue;
}

.btn-danger {
    color: white;
    background-color: #FFBE24;
    border-color: orange;
}

.panel-heading a{
    font-family: 'Special Elite';
    font-size: 20px;
    color: white;
}

a:visited {
    color: gray;
}

.container h1{
    font-family: 'Special Elite';
    font-size: 50px;
    color: black;
}

.panel-default>.panel-heading {
    color: #333;
    background-color: black;
    border-color: #337ab7;
}

.btn-default {
    color: #333;
    background-color: black;
    border-color: #ccc;
}

.head h1{
    background-color: black;
    color: white;
    height: 75px;
    padding-top: 20px;
}

.head{
    border-style: solid;
    border-width: 5px;
    margin-bottom: 20px;
    padding-bottom: 8px;
}

.jumbotron p{
    font-size: 15px;
}

.jumbotron {
    background: white;
    opacity: .9;
}

.cant-see-me{
    display: none;
}